{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "out/test",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["mocha", "node", "chai"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "out"]
}
